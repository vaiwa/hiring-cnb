{
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/apps/frontend/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "dist/apps/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/apps/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/apps/frontend/index.html"
    }
  ]
}
